<h1><%= @list.name %></h1> <!-- #class example -->

<!-- <%# if @list.phone_number %>
  You should call their phone at <%#= @list.phone_number %> -->
<!-- <%# end %> -->

<a href="/">Go to listspage</a>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Current Items</th>
      <th>Due Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <!-- display item -->
      <td>
        <%= item.task %><%= item.due_date %>
      </td>
      <!-- add or change due date -->
      <td>
      <form action="/items/<%= item.id %>" method="patch">
        <input type="date" name="_method" value="patch">
        <input type="submit" name="submit" value="Update">
      </form>
      </td>
      <!-- delete item -->
      <td>
      <form action="/items/<%= item.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" name="submit" value="Mark as Complete">
      </form>
      </td>
    </tr>
    <% end %>
  <tbody>
</table>

<form action="/lists/<%=@list.name%>/items" method="post">
  <input type="text" name="item[task]" placeholder="New Item">
  <input type="hidden" name="item[list_id]" value="<%= @list.id %>">

  <!--Make a button -->
  <input type="submit" name="submit" value="Add to list">
</form>
